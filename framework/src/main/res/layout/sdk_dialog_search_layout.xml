<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sdk_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/sdk_img_close_black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="编辑对话"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/sdk_et_input"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="54dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/sdk_shape_edit_bg"
        android:gravity="center_vertical"
        android:hint="请输入要查询的内容"
        android:singleLine="true"
        android:imeOptions="actionSend"
        android:paddingLeft="8dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sdk_tv_guess_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdk_et_input"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="猜你想说："
        android:textColor="#666666"
        android:textSize="14sp" />

    <me.next.tagview.TagCloudView
        android:id="@+id/sdk_rl_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdk_tv_guess_say"
        app:tcvBackground="@drawable/sdk_shape_tab_item"
        app:tcvBorder="8dp"
        app:tcvCanTagClick="true"
        app:tcvItemBorderHorizontal="8dp"
        app:tcvItemBorderVertical="6dp"
        app:tcvTextColor="#716FF2"
        app:tcvTextSize="6sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_below="@id/sdk_rl_search_view" />
</RelativeLayout>